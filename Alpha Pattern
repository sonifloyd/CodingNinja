
Print the following pattern for the given N number of rows.
Pattern for N = 3
 A
 BB
 CCC



import java.util.Scanner;
public class Solution {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		int n=sc.nextInt();
		int i =1;
		int no=0;
		while(i<=n) {
			
			int j=1;
			
			while(j<=i) {
				System.out.print((char)('A'+no));
				j++;
				
				
			}
			System.out.println();
			i++;
			no++;
			
			
		}
		
		
	}

}
